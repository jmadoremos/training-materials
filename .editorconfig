# This file is the top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.{py,pyi}]
tab_width = 4

# Shell files
[*.sh]
end_of_line = lf

# JSON and YAML files
[*.{json,jsonc,yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false
